# Public URL for metadata routes (sitemap/robots) and Open Graph.
# Include the Next.js basePath ("/film") if you keep it enabled.
NEXT_PUBLIC_SITE_URL=https://example.com/film

# App name (branding)
APP_NAME=Rebahan
NEXT_PUBLIC_APP_NAME=Rebahan

# Base path (match next.config.ts)
NEXT_PUBLIC_BASE_PATH=/film

# API base URL (optional; defaults to the current Vite base API)
NEXT_PUBLIC_API_BASE=https://zeldvorik.ru/apiv3/api.php
API_BASE=https://zeldvorik.ru/apiv3/api.php

# Ads (Adsterra)
NEXT_PUBLIC_ADS_ENABLED=true
NEXT_PUBLIC_ADSTERRA_ENABLED=true
NEXT_PUBLIC_ADSTERRA_HEADER_728_KEY=
NEXT_PUBLIC_ADSTERRA_MOBILE_320_KEY=
NEXT_PUBLIC_ADSTERRA_NATIVE_KEY=

# Optional: Adsterra loader script URL
NEXT_PUBLIC_ADSTERRA_SCRIPT_SRC=

# Optional: Adsterra invoke script bases
NEXT_PUBLIC_ADSTERRA_BANNER_SCRIPT_BASE=https://www.topcreativeformat.com/
NEXT_PUBLIC_ADSTERRA_NATIVE_SCRIPT_BASE=

# Optional: base path for route rules
NEXT_PUBLIC_ADS_BASE_PATH=/film
